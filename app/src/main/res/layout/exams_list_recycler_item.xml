<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:background="@drawable/background_exams_recycler"
    android:layout_marginRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:padding="2dp"
            android:background="@drawable/background_exam_recycler_item">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center|center_horizontal">
                <ImageView
                    android:id="@+id/examIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ikon_star"
                    app:tint="@color/ratingColor"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:src="@drawable/ikon_star"
                    app:tint="@color/ratingColor"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="8dp">
                <TextView
                    android:id="@+id/isExamNecessary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zorunlu"
                    android:fontFamily="@font/roboto_flex"
                    android:textColor="@color/ratingColor"
                    android:textStyle="bold"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/examTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bulmaca Sınavı"
                    android:fontFamily="@font/roboto_flex"
                    android:textColor="@color/darkBaseColor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/examDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sınav açıklamaları"
                android:fontFamily="@font/roboto_flex"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>