<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:id="@+id/mainLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            style="@style/MyCardView"
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="0dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/ratingColor"
                app:shapeAppearanceOverlay="@style/MyCardViewOverlay"
                android:scaleType="fitXY" />

            <me.t3sl4.upcortex.UI.Components.HorizontalStepper.HorizontalStepper
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:horizontalStepperStepSize="4"
                app:horizontalStepperCurrentStep="1"
                app:horizontalStepperCompletedColor="@color/secondaryColor"
                app:horizontalStepperCurrentColor="@color/white"
                app:horizontalStepperGeneralColor="@color/horizontalStepperColor"
                app:horizontalStepperLeftTopRadius="10dp"
                app:horizontalStepperLeftBottomRadius="10dp"
                app:horizontalStepperRightTopRadius="10dp"
                app:horizontalStepperRightBottomRadius="10dp"
                app:horizontalStepperPager="false"
                app:horizontalStepperPadding="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center|bottom">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_second_header"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_second_desc"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:src="@drawable/logo_splash"
                    android:layout_gravity="center|end" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ikon_shipment"
                    app:tint="@color/ratingColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_second_header"
                    android:textColor="@color/darkBaseColor"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextAddresName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_support"
                android:drawableTint="@color/darkBaseColor"
                android:drawableStart="@drawable/ikon_address"
                android:drawablePadding="16dp"
                android:ems="10"
                android:fontFamily="@font/roboto_flex"
                android:hint="@string/register_address_name"
                android:inputType="text"
                android:padding="8dp"
                android:textColorHint="@color/darkBaseColor"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextName"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="50dp"
                    android:background="@drawable/button_support"
                    android:drawableTint="@color/darkBaseColor"
                    android:drawableStart="@drawable/ikon_register_person"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_flex"
                    android:hint="@string/register_name"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textColorHint="@color/darkBaseColor"
                    android:layout_marginRight="12dp"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextSurname"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="50dp"
                    android:background="@drawable/button_support"
                    android:drawableTint="@color/darkBaseColor"
                    android:drawableStart="@drawable/ikon_register_person"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_flex"
                    android:hint="@string/register_surname"
                    android:inputType="textPersonName"
                    android:padding="8dp"
                    android:textColorHint="@color/darkBaseColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/button_support"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/icon_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ikon_register_phone"
                    android:layout_gravity="center"
                    app:tint="@color/darkBaseColor" />

                <com.hbb20.CountryCodePicker
                    android:id="@+id/country_code_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_defaultNameCode="TR"
                    app:ccp_showNameCode="false"
                    app:ccp_showFlag="false"
                    android:layout_gravity="center"/>

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/divider"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_support"
                    android:drawableEnd="@drawable/ikon_register_arrow_down"
                    android:drawableTint="@color/darkBaseColor"
                    android:ems="10"
                    android:fontFamily="@font/roboto_flex"
                    android:hint="@string/register_phone_number"
                    android:inputType="phone"
                    android:padding="8dp"
                    android:textColorHint="@color/darkBaseColor"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_support"
                android:drawableEnd="@drawable/ikon_register_arrow_down"
                android:drawableTint="@color/darkBaseColor"
                android:drawableStart="@drawable/ikon_address_country"
                android:drawablePadding="16dp"
                android:ems="10"
                android:fontFamily="@font/roboto_flex"
                android:hint="@string/register_address_city"
                android:inputType="none"
                android:padding="8dp"
                android:textColorHint="@color/darkBaseColor"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextDistrict"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="50dp"
                    android:background="@drawable/button_support"
                    android:drawableEnd="@drawable/ikon_register_arrow_down"
                    android:drawableTint="@color/darkBaseColor"
                    android:drawableStart="@drawable/ikon_address_district"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_flex"
                    android:hint="@string/register_address_district"
                    android:inputType="none"
                    android:padding="8dp"
                    android:textColorHint="@color/darkBaseColor"
                    android:layout_marginRight="12dp"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextNeighborhood"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="50dp"
                    android:background="@drawable/button_support"
                    android:drawableEnd="@drawable/ikon_register_arrow_down"
                    android:drawableTint="@color/darkBaseColor"
                    android:drawableStart="@drawable/ikon_address_neighborhood"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_flex"
                    android:hint="@string/register_address_neighborhood"
                    android:inputType="none"
                    android:clickable="false"
                    android:padding="8dp"
                    android:textColorHint="@color/darkBaseColor"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextAddresDetail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_support"
                android:drawableEnd="@drawable/ikon_register_arrow_down"
                android:drawableTint="@color/darkBaseColor"
                android:drawableStart="@drawable/ikon_address_detail"
                android:drawablePadding="16dp"
                android:ems="10"
                android:fontFamily="@font/roboto_flex"
                android:hint="@string/register_address_detail"
                android:inputType="text"
                android:padding="8dp"
                android:textColorHint="@color/darkBaseColor"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">

                <com.zpj.widget.checkbox.ZCheckBox
                    android:id="@+id/confirmCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    app:z_checkbox_checked_color="@color/ratingColor"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_address_confirm"
                    android:textSize="16sp"
                    android:textColor="@color/darkBaseColor"
                    android:fontFamily="@font/roboto_flex"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="12dp"
            android:text="@string/button_back"
            android:textAllCaps="false"
            android:textColor="@color/darkBaseColor"
            android:background="@drawable/button_support"
            android:textStyle="bold"
            android:textSize="16sp" />
        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="@string/button_next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/button_next_2"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>